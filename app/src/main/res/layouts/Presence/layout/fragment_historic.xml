<?xml version="1.0" encoding="utf-8"?>
 <layout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools">

     <data>

     </data>

     <RelativeLayout
         android:id="@+id/relatifLayout"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         tools:context=".ui.presenceFolder.historic.HistoricFragment">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

             <LinearLayout
                 android:layout_width="770dp"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_gravity="center_horizontal"
                 android:background="@drawable/layout_border"
                 android:orientation="horizontal">

                 <Spinner
                     android:id="@+id/SpinnerLeader"
                     android:layout_width="220dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="20dp"
                     android:layout_marginRight="30dp">

                 </Spinner>

                 <Button
                     android:id="@+id/StartDateButton"
                     style="?android:spinnerStyle"
                     android:layout_width="120dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginRight="20dp"
                     android:layout_weight="0"
                     android:text="@string/_15_13_21"
                     android:textColor="@color/black"
                     android:textSize="16dp" />

                 <Button
                     android:id="@+id/EndDateButton"
                     style="?android:spinnerStyle"
                     android:layout_width="120dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginRight="20dp"
                     android:layout_weight="0"
                     android:text="@string/_15_13_21"
                     android:textColor="@color/black"
                     android:textSize="16dp" />

                 <ImageButton
                     android:id="@+id/SearchButton"
                     android:layout_width="wrap_content"
                     android:layout_height="40dp"
                     android:layout_gravity="center_vertical"
                     android:layout_marginRight="100dp"
                     android:background="@android:color/transparent"
                     android:src="@drawable/ic_search_24">

                 </ImageButton>

                 <ImageButton
                     android:id="@+id/Refreshbutton"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:background="@android:color/transparent"
                     android:src="@drawable/ic_refresh_30">

                 </ImageButton>

             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:orientation="horizontal"
                   >
                 <EditText
                     android:id="@+id/textSearch"
                     android:layout_width="750dp"
                     android:layout_height="wrap_content"
                     android:layout_margin="10dp"
                     android:padding="10dp"
                     android:layout_gravity="center_vertical"
                     android:hint="Search keyword">
                 </EditText>
             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginTop="30dp">
                 <TableLayout
                     android:layout_width="match_parent"
                     android:layout_height="890dp"
                     android:stretchColumns="0,1,2,3,4,5,6,7"
                     android:shrinkColumns="0"
                     android:background="@color/red"
                     android:minHeight="400dp"
                     >

                         <ScrollView
                             android:layout_width="fill_parent"
                             android:layout_height="fill_parent"
                             android:scrollbars="vertical">

                         <HorizontalScrollView
                             android:id="@+id/horizontalView"
                             android:layout_height="wrap_content"
                             android:scrollbars="horizontal"
                             android:layout_width="match_parent"
                             android:fillViewport="true"
                             android:layout_marginTop="5dip">
                             <LinearLayout
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:orientation="vertical">
                             <TableRow
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:background="@color/red">

                                 <TextView
                                     android:id="@+id/View11"
                                     android:layout_height="wrap_content"
                                     android:layout_width="120dp"
                                     android:layout_marginLeft="10dp"
                                     android:text="Date"
                                     android:textStyle="bold"
                                     android:textSize="15dp"
                                     android:textColor="#ffffff"
                                     android:layout_gravity="center"
                                     ></TextView>

                                 <TextView
                                     android:id="@+id/MatriculeH"
                                     android:layout_height="wrap_content"
                                     android:layout_width="100dp"
                                     android:layout_marginLeft="10dp"
                                     android:text="ID"
                                     android:textStyle="bold"
                                     android:textSize="15dp"
                                     android:textColor="#ffffff"
                                     android:layout_gravity="center"
                                     ></TextView>

                                 <TextView
                                     android:id="@+id/LastName"
                                     android:layout_height="wrap_content"
                                     android:layout_width="150dp"
                                     android:text="Last name"
                                     android:textColor="#ffffff"
                                     android:textSize="18dp"
                                     android:textStyle="bold"
                                     android:layout_gravity="center"

                                     ></TextView>

                                 <TextView
                                     android:id="@+id/FirstName"
                                     android:layout_width="130dp"
                                     android:layout_height="wrap_content"
                                     android:layout_gravity="center"
                                     android:text="First name"
                                     android:textColor="#ffffff"
                                     android:textSize="18dp"
                                     android:textStyle="bold">

                                 </TextView>

                                 <TextView
                                     android:id="@+id/Function"
                                     android:layout_width="130dp"
                                     android:layout_height="wrap_content"
                                     android:layout_gravity="center"
                                     android:text="Function"
                                     android:textColor="#ffffff"
                                     android:textSize="18dp"
                                     android:textStyle="bold"></TextView>
                                 <TextView
                                     android:id="@+id/Line"
                                     android:layout_height="wrap_content"
                                     android:layout_width="150dp"
                                     android:text="Line"
                                     android:layout_gravity="center"
                                     android:textStyle="bold"
                                     android:textSize="18dp"
                                     android:textColor="#ffffff"
                                     android:layout_marginLeft="15dp"
                                     ></TextView>


                                 <TextView
                                     android:id="@+id/State"
                                     android:layout_width="90dp"
                                     android:layout_height="wrap_content"
                                     android:layout_gravity="center"
                                     android:text="State"
                                     android:textColor="#ffffff"
                                     android:textSize="18dp"
                                     android:textStyle="bold">

                                 </TextView>

                                 <TextView
                                     android:id="@+id/Shift"
                                     android:layout_width="80dp"
                                     android:layout_height="wrap_content"
                                     android:layout_gravity="center"
                                     android:text="Shift"
                                     android:textColor="#ffffff"
                                     android:textSize="18dp"
                                     android:textStyle="bold">

                                 </TextView>
                                 <TextView
                                     android:id="@+id/Hours"
                                     android:layout_width="55dp"
                                     android:layout_height="wrap_content"
                                     android:text="Hours"
                                     android:layout_gravity="center"
                                     android:textStyle="bold"
                                     android:textSize="18dp"
                                     android:textColor="#ffffff"
                                     >

                                 </TextView>



                     </TableRow>
                                 <android.support.v7.widget.RecyclerView
                                         android:id="@+id/presenceRecyclerView"
                                         android:layout_width="match_parent"
                                         android:layout_height="match_parent"
                                         android:layout_gravity="center_vertical"
                                         android:minHeight="200dp" />

             </LinearLayout>
                         </HorizontalScrollView>
                         </ScrollView>

                 </TableLayout>
             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="15dp">
                 <View
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1">

                 </View>
                 <TextView
                     android:id="@+id/sum"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Sum :   "
                     android:textSize="20sp"
                     android:textColor="@color/black">
                 </TextView>
                 <TextView
                     android:id="@+id/SumHours"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0.0"
                     android:textSize="20sp"
                     android:layout_marginRight="20dp"
                     android:textColor="@color/green"
                     android:textStyle="bold">

                 </TextView>
             </LinearLayout>

         </LinearLayout>



     </RelativeLayout>
 </layout>